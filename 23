# include <iostream>
# include <conio.h>
using namespace std;

int main() {

	setlocale(0, "");

	int i1;
	int i2;
	int i3;
	int i4;
	int i5;
	string color_white = "\x1b[0m";
	string color_red = "\x1b[31m";


	cout << "Введите элементы массива через Enter: " << endl;

	cout << "Элемент 1: ";
	cin >> i1;
	cout << "Элемент 2: ";
	cin >> i2;
	cout << "Элемент 3: ";
	cin >> i3;
	cout << "Элемент 4: ";
	cin >> i4;
	cout << "Элемент 5: ";
	cin >> i5;
	
	int arrInt[5] = { i1, i2, i3, i4, i5 };

	for (int i = 0; i < 5; i++) {
		if (i < 10) {
			cout << endl << "| Таблица: " << color_red << i + 1 << color_white << endl;
			cout << "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -" << endl;
			cout << "|    Число    |           Пример            |    Результат     |" << endl;
			if (arrInt[i] + arrInt[i] < 10)
			{
				cout << "|      " << arrInt[i] << "      |             " << arrInt[i] << color_red << " + " << color_white << arrInt[i] << "           |        " << arrInt[i] + arrInt[i] << "         |" << endl;
			}
			else if (arrInt[i] + arrInt[i] >= 10)
			{
				cout << "|      " << arrInt[i] << "      |             " << arrInt[i] << color_red << " + " << color_white << arrInt[i] << "           |        " << arrInt[i] + arrInt[i] << "        |" << endl;
			}
			cout << "|      " << arrInt[i] << "      |             " << arrInt[i] << color_red << " - " << color_white << arrInt[i] << "           |        " << arrInt[i] - arrInt[i] << "         |" << endl;
			cout << "|      " << arrInt[i] << "      |             " << arrInt[i] << color_red << " / " << color_white << arrInt[i] << "           |        " << arrInt[i] / arrInt[i] << "         |" << endl;
			if (arrInt[i] * arrInt[i] < 10)
			{
				cout << "|      " << arrInt[i] << "      |             " << arrInt[i] << color_red << " * " << color_white << arrInt[i] << "           |        " << arrInt[i] * arrInt[i] << "         |" << endl;
			}
			else if (arrInt[i] * arrInt[i] >= 10)
			{
				cout << "|      " << arrInt[i] << "      |             " << arrInt[i] << color_red << " * " << color_white << arrInt[i] << "           |        " << arrInt[i] * arrInt[i] << "        |" << endl;
			}
			
		}
	}
}
